<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-9 offset-4 mt-3">
    <h2><%= listing.title %></h2>

    <div class="card show-card" style="width: 18rem">
      <img
        src="<%= listing.image.url  %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <i>@<%= listing.owner.username %></i>
          <br />
          <%= listing.des %>
          <br />
          <%= listing.price %> / Day
          <!-- &#8377; <%= listing.price.toLocaleString("en-IN") %> -->
          <br />
          <%= listing.location %>
          <br />
          <%= listing.country %>
        </p>
      </div>
    </div>

    <br />
    <% if(currentUser && listing.owner._id.equals(currentUser._id)){ %>
    <div class="btns">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-2 edit-btn"
        >E D I T</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-4 edit-btn">DELETE</button>
      </form>
    </div>
    <% } %>
    <br /><br />
  </div>
  <hr />

  <div class="offset-4 mt-3">
    <h4>Leave A Review</h4>
    <% if(currentUser){ %>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="offset-4 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          step="0.1"
          name="review[rating]"
        />
      </div> -->
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <br />
      <div class mb-3 mt-3>
        <label for="comments" class="form-label">Comments </label>
        <textarea
          name="review[Comments]"
          id="comments"
          cols="28"
          rows="1"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter Your Review</div>
      </div>
      <br />
      <button class="btn btn-outline-dark">Submit</button>
      <br />
      <br />
    </form>
    <% } %>
    <hr />
    <% if(listing.reviews.length > 0){ %>
    <p><b>All Reviews Are Here</b></p>
    <div class="row col-5">
      <% for(review of listing.reviews) { %>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">ethical_khoriya</h4>
          <p class="card-text"><%= review.Comments %></p>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
        </div>
        <form
          class="mb-3"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>"
          ?_method="DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="col-9 offset-4 mt-3">
    <h3>Where youâ€™ll be</h3>
    <div id="map"></div>
  </div>
</div>

<script>
  let mapToken = "<%= process.env.MAP_TOKEN %>";

  mapboxgl.accessToken = mapToken;
  // TO MAKE THE MAP APPEAR YOU MUST
  // ADD YOUR ACCESS TOKEN FROM
  // https://account.mapbox.com
  const map = new mapboxgl.Map({
    container: "map", // container ID
    center: [-74.5, 40], // starting position [lng, lat]
    zoom: 9, // starting zoom
  });
</script>
