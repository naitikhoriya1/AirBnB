<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h2>Create A New Listing</h2>
    <br />
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="Make A Sweet Title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title required</div>
      </div>

      <div class="mb-3">
        <lable for="des" class="form-label">Description</lable>
        <textarea name="listing[des]" class="form-control" required> </textarea>
        <div class="invalid-feedback">Please Enter a Short Description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Upload Image</lable>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        <!-- <div class="valid-feedback">I Handle it !</div> -->
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter A Valid Price</div>
        </div>

        <div class="mb-3 col-8">
          <lable for="country" class="form-label"> Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country Must Be Needed</div>
        </div>
      </div>
      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="Jaipur,Rajasthan"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location Also Needed</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
    <br />
  </div>
</div>
